<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1E0F3"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="364dp"
        android:layout_height="92dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/single0"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/double0"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="00"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="X"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/total"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="合計"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:layout_width="364dp"
        android:layout_height="92dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow3"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/count7"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="7"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/count8"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="8"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/count9"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="9"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="C"
            android:textColor="#000000"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="364dp"
        android:layout_height="92dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow2"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/count4"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/count5"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="5"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/count6"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="6"
            android:textSize="30sp"
            tools:textColor="#000000" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="中止"
            android:textColor="#000000"
            android:textSize="10sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="364dp"
        android:layout_height="92dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/count1"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/count2"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/count3"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="3"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/subtotal"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#83BFBFBF"
            android:text="小計"
            android:textColor="#000000" />
    </TableRow>

    <EditText
        android:id="@+id/Time"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="#ECEAE2"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:background="#ECEAE2"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toStartOf="@+id/Time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total1"
        android:layout_width="819dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="346dp"
        android:background="#ECEAE2"
        android:gravity="center_vertical"
        android:text="合計"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="819dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:background="#ECEAE2"
        android:text="内消費税"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="819dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:background="#ECEAE2"
        android:text="お預かり"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="819dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="20dp"
        android:background="#ECEAE2"
        android:text="お釣り"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/back"
        android:layout_width="75dp"
        android:layout_height="21dp"
        android:background="#ECEAE2"
        android:text="戻る"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
